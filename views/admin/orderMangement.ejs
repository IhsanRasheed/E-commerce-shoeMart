            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-3">Order Management</h1>
                   

  <div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Order DataTable 
       

    </div>
    <div class="card-body">
        <% if(orders!=null) { %>
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Name</th>                  
                    <th>Total Amount</th>
                    <th>Payment Method</th>              
                    <th>Order Status</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Order Date</th>
                    <th>Name</th>                  
                    <th>Total Amount</th>
                    <th>Payment Method</th>
                    <th>Order Status</th>
                   
                </tr>
            </tfoot>
            <tbody>
                
                <% orders.forEach((data)=>{ %>
              <tr>
                 
                    <%let date = Date.now(data.orderDate)%>
                    <%const dt = new Date(date)%>
                    <%const todate = dt.toLocaleDateString();%>
                    <td><%=todate%></td>

                <td>  <%=data.name%>    </td>
                <td>  <%=data.totalAmount%>    </td>
                <td>   <%=data.paymentMethod%> </td>

                <td>  <form action="/admin/order" method="post" >  
                    <select name="orderstatus" id="" class="rounded-3">
                        <% if (data.orderStatus !== 'data.orderStatus') { %>
                    <option value="<%=data.orderStatus%>" selected>  <%=data.orderStatus%>   </option>
                    <% } %>
                    <% if (data.orderStatus !== 'processing') { %>
                        <option value="processing">processing</option>
                        <% } %>
                    <!-- <option value="processing">processing</option> -->
                    <% if (data.orderStatus !== 'shipped') { %>
                    <option value="shipped">shipped</option>
                    <% } %>
                    <% if (data.orderStatus !== 'delivered') { %>
                    <option value="delivered">delivered</option>
                    <% } %>
                    <% if (data.orderStatus !== 'cancelled') { %>
                    <option value="cancelled">cancelled</option>'[
                    '
                    <% } %>
                    <% if (data.orderStatus !== 'refunded') { %>
                    <option value="refunded">refunded</option>
                    <% } %>
                </select>
                 <input type="text" value="<%=data._id%>" name="orderid" hidden>
                 <button type="submit" class="rounded-3 border-0 btn-primary">Update</button>   
                </form>
            

                    </td>
                    
              </tr>
              <%})%>
            </tbody>
        </table>
        <%}%>
