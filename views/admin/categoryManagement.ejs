  <div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Category Data Table 
    </div>
    <div class="card-body">
        <% if(categories!=null) { %>
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <!-- <th>No.</th> -->
                    <th>Name</th>  
                    <th>Status</th>
                   
                    
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <!-- <th>No.</th> -->
                    <th>Name</th>
                    <th>Status</th>
                    
                    

                </tr>
            </tfoot>
            <tbody>
                <% categories.forEach((categoryData)=>{ %>
              <tr>
                <td><%=categoryData.name%></td>
                
                <td>
                    <%if(categoryData.status==true){%> 
                      <a href="category/block?id=<%=categoryData._id%>" onclick="return confirm('Are you sure to unlist the <%=categoryData.name%>')" ><button type="button" class="btn btn-success" style="width: 100px;" >List</button></a>
                        <%} else {%>
                           <a href="category/block?id=<%=categoryData._id%>" onclick="return confirm('Are you sure to list the <%=categoryData.name%>')" > <button type="button" class="btn btn-danger" style="width: 100px;" >Unlist</button></a> 
                            
                            <%}%>


                    <a href="category/edit?id=<%=categoryData._id%>"><button type="button" class="btn btn-primary" style="width: 100px;" >Edit</button></a> 
                </td>
                    
              </tr>
              <%})%>
            </tbody>
        </table>
        <%}%>
    </div>
